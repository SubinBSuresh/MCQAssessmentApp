<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MCQQuestionInput_7">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        android:padding="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_MCQHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="MCQ"
            android:textColor="#000000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_faculty_MCQNumber"
                android:layout_width="50dp"
                android:layout_height="31dp"
                android:layout_weight="1"
                android:text="No" />

            <EditText
                android:id="@+id/et_faculty_MCQQuestion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="MCQ Question here."
                android:inputType="textPersonName" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_MCQ_Option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Option 1 here"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_MCQ_Option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Option 2 here"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_MCQ_Option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Option 3 here"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_MCQ_Option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Option 4 here"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/et_MCQ_CorrectAnswer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Correct Answer"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btn_faculty_MCQOneQuestion"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="35dp"
            android:text="Save" />

        <Button
            android:id="@+id/btn_faculty_MCQAllQuestions"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="25dp"
            android:text="Submit" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>