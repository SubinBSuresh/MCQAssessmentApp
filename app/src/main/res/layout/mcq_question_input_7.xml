<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ECF1F1"
    tools:context=".MCQQuestionInput_7">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#F9F7F7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/mcq_input_style"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_MCQHeading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/lora"
                android:gravity="center_horizontal"
                android:text="MCQ"
                android:textColor="@color/text_secondary"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/josefin_sans_bold"
                android:gravity="center_horizontal"
                android:text="Lets add some Questions."
                android:textColor="@color/text_secondary"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="13dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_faculty_MCQNumber"
                    android:layout_width="50dp"
                    android:layout_height="31dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/lora"
                    android:text="No"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_faculty_MCQQuestion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="@font/lora"
                    android:hint="MCQ Question here."
                    android:inputType="textPersonName"
                    android:textColor="@color/text_primary"
                    android:textSize="20sp" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/et_MCQ_Option1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:fontFamily="@font/lora"
                        android:hint="Option 1 here"
                        android:inputType="textPersonName"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/et_MCQ_Option2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:fontFamily="@font/lora"
                        android:hint="Option 2 here"
                        android:inputType="textPersonName"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/et_MCQ_Option3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:fontFamily="@font/lora"
                        android:hint="Option 3 here"
                        android:inputType="textPersonName"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/et_MCQ_Option4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:fontFamily="@font/lora"
                        android:hint="Option 4 here"
                        android:inputType="textPersonName"
                        android:textColor="@color/text_primary" />

                    <EditText
                        android:id="@+id/et_MCQ_CorrectAnswer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:ems="10"
                        android:fontFamily="@font/lora"
                        android:hint="Correct Answer"
                        android:inputType="textPersonName"
                        android:textColor="@color/text_primary" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_faculty_MCQOneQuestion"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="#6D6DD1"
                android:elevation="8dp"
                android:fontFamily="@font/cabin"
                android:text="Save"
                android:textSize="16sp"
                android:textStyle="bold"
                android:translationZ="2dp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/btn_faculty_MCQAllQuestions"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#6D6DD1"
                android:elevation="8dp"
                android:fontFamily="@font/cabin"
                android:text="Submit"
                android:textSize="16sp"
                android:textStyle="bold"
                android:translationZ="2dp"
                app:cornerRadius="30dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>