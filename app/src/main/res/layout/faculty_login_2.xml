<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    tools:context=".FacultyLogin_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/arrow_back" />

        <FrameLayout
            android:id="@+id/framelayout"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/book"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/teacher" />

            <TextView
                android:id="@+id/tv_assessmentName_facultyDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/comfortaa_bold"
                android:text="Faculty Login"
                android:textColor="@color/text_primary"
                android:textSize="30dp"
                android:textStyle="bold" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="50dp">

            <EditText
                android:id="@+id/et_faculty_loginEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password_login_faculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_faculty_loginEmail"
                android:background="@color/primary_color"
                android:gravity="center"
                app:boxStrokeColor="#00e6b3"
                app:hintEnabled="false"
                app:hintTextColor="#C8C8C8"
                app:passwordToggleEnabled="true">


                <EditText
                    android:id="@+id/et_faculty_loginPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_faculty_loginEmail"
                    android:layout_marginTop="40dp"
                    android:background="@color/primary_color"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/btn_faculty_signUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_login_faculty"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="10dp"
                android:background="#00FFFFFF"
                android:text="Sign up"
                android:textColor="#B4000000"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btn_faculty_login"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_below="@id/btn_faculty_signUp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="0dp"
                android:backgroundTint="#1E2360"
                android:elevation="8dp"
                android:fontFamily="@font/cabin"
                android:text="Login"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:translationZ="2dp"
                app:cornerRadius="30dp" />

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>